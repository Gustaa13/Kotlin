<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seu.pacote">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/timeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="Time A"
                android:textColor="@color/timeA"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/placarTimeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/timeA"
                android:textSize="54sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/tresPontosA"
                style="@style/CustomButton"
                android:text="+3 PONTOS"
                android:background="@drawable/rounded_button_time_a"/>

            <Button
                android:id="@+id/doisPontosA"
                style="@style/CustomButton"
                android:text="+2 PONTOS"
                android:background="@drawable/rounded_button_time_a"/>

            <Button
                android:id="@+id/tiroLivreA"
                style="@style/CustomButton"
                android:text="Tiro Livre"
                android:background="@drawable/rounded_button_time_a"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/timeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="Time B"
                android:textColor="@color/timeB"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/placarTimeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/timeB"
                android:textSize="54sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <Button
                android:id="@+id/tresPontosB"
                style="@style/CustomButton"
                android:text="+3 PONTOS"
                android:background="@drawable/rounded_button_time_b"/>

            <Button
                android:id="@+id/doisPontosB"
                style="@style/CustomButton"
                android:text="+2 PONTOS"
                android:background="@drawable/rounded_button_time_b"/>

            <Button
                android:id="@+id/tiroLivreB"
                style="@style/CustomButton"
                android:text="Tiro Livre"
                android:background="@drawable/rounded_button_time_b"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reiniciarPartida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reiniciar Partida"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:padding="12dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>
</RelativeLayout>