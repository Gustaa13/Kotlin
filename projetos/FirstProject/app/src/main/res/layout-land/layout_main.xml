<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/reiniciarPartida"
            style="@style/CustomButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="31dp"

            android:background="@drawable/rounded_button_restart"
            android:backgroundTint="@color/reiniciarPartida"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:text="Reiniciar Partida"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="318dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/timeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="none"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:inputType="textCapWords|textMultiLine"
                android:lines="2"
                android:layout_marginTop="20dp"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:text="Time A"
                android:textColor="@color/timeA"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/placarTimeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/timeA"
                android:textSize="46sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/containerBotoesA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tresPontosA"
                    style="@style/CustomButton"
                    android:layout_width="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_button_time_a"
                    android:text="+3" />

                <Button
                    android:id="@+id/doisPontosA"
                    style="@style/CustomButton"
                    android:layout_width="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_button_time_a"
                    android:text="+2" />

                <Button
                    android:id="@+id/tiroLivreA"
                    style="@style/CustomButton"
                    android:layout_width="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_button_time_a"
                    android:text="Tiro Livre" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="318dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/timeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ellipsize="none"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:inputType="textCapWords|textMultiLine"
                android:lines="2"
                android:layout_marginTop="20dp"
                android:scrollHorizontally="false"
                android:singleLine="false"
                android:text="Time B"
                android:textColor="@color/timeB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/placarTimeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/timeB"
                android:textSize="46sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/containerBotoesB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tresPontosB"
                    style="@style/CustomButton"
                    android:layout_width="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_button_time_b"
                    android:text="+3" />

                <Button
                    android:id="@+id/doisPontosB"
                    style="@style/CustomButton"
                    android:layout_width="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_button_time_b"
                    android:text="+2" />

                <Button
                    android:id="@+id/tiroLivreB"
                    style="@style/CustomButton"
                    android:layout_width="70dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/rounded_button_time_b"
                    android:text="Tiro Livre" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>